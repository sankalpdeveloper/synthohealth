								defining_code matches {
									[local::
									at0007,    -- Yes
									at0008,    -- No
									at0009]    -- Unknown
								}
							}
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0014] occurrences matches {0..1} matches {    -- Date of attendance
						value matches {
